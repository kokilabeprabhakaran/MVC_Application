@using EducationalLibraryManagementSystem.Models
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title - Admin</title>
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body>
    <div class="d-flex">
        <nav class="flex-column bg-light vh-100 p-3" style="width: 250px;">
            <h5 class="fw-bold mb-4">Admin Dashboard</h5>
            <a asp-area="Admin" asp-controller="Users" asp-action="Add" class="nav-link">Add User</a>
            <a asp-area="Admin" asp-controller="Books" asp-action="Add" class="nav-link">Add Book</a>
            <a asp-area="Admin" asp-controller="Books" asp-action="List" class="nav-link">List Available Books</a>
            <a asp-area="Admin" asp-controller="BookIssues" asp-action="Issue" class="nav-link">Issue Book</a>
            <a asp-area="Admin" asp-controller="BookIssues" asp-action="BorrowedBooks" class="nav-link">Borrowed Books</a>
            <a asp-area="Admin" asp-controller="BookIssues" asp-action="Return" class="nav-link">Return Book</a>
        </nav>

        <div class="flex-grow-1 p-4">
            <div class="d-flex justify-content-between mb-4">
                <h4>@ViewBag.Title</h4>
                <div>
                    <span class="me-3">Admin</span>
                    <a href="/Account/Logout" class="btn btn-outline-secondary btn-sm">Logout</a>
                </div>
            </div>

            @RenderBody()
        </div>
    </div>
</body>
</html>

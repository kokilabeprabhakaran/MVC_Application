@model IEnumerable<EducationalLibraryManagementSystem.Models.BorrowedBookViewModel>

@{
    ViewData["Title"] = "Borrowed Books";
}

<h2>Borrowed Books</h2>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>User</th>
            <th>Book</th>
            <th>Issue Date</th>
            <th>Issue Time</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.UserName</td>
                <td>@item.BookTitle</td>
                <td>@item.IssuedAt.ToShortDateString()</td>
                <td>@item.IssuedAt.ToShortTimeString()</td>
            </tr>
        }
    </tbody>
</table>

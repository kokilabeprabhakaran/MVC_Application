@model IEnumerable<EducationalLibraryManagementSystem.Models.BorrowedBookViewModel>

<h2>Return Books</h2>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>User</th>
            <th>Book</th>
            <th>Issued At</th>
            <th>Actions</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.UserName</td>
            <td>@item.BookTitle</td>
            <td>@item.IssuedAt</td>
            <td>
                <form asp-action="ReturnConfirmed" asp-route-id="@item.Id" method="post">
                    <button type="submit" class="btn btn-success">Return</button>
                </form>
            </td>
        </tr>
    }
    </tbody>
</table>

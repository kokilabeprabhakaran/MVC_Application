<h2>Issue Book</h2>
<form id="issueForm" asp-action="Issue" method="post">
    <div class="form-group">
        <label>User ID</label>
        <input type="number" name="userId" class="form-control" />
    </div>
    <div class="form-group">
        <label>Book ID</label>
        <input type="number" name="bookId" class="form-control" />
    </div>
    <br />
    <button type="submit" class="btn btn-primary">Issue</button>
</form>


<script>
    $(document).ready(function () {
        $("#issueForm").validate({
            rules: {
                userId: {
                    required: true,
                    min: 1
                },
                bookId: {
                    required: true,
                    min: 1
                }
            },
            messages: {
                userId: {
                    required: "User ID is required",
                    min: "Enter a valid User ID"
                },
                bookId: {
                    required: "Book ID is required",
                    min: "Enter a valid Book ID"
                }
            }
        });
    });
</script>
